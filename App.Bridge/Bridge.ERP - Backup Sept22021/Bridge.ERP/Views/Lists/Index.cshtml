@model IEnumerable<Bridge.ERP.Models.Lists>

@{
    ViewData["Title"] = "Index";
}

<div class="mr-auto p-2">
    <a asp-action="Create" class="btn btn-info">Create New Marketing List</a>
    <h4>Marketing Lists</h4>
</div>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ListName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDelete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn alert-warning"><span class="fa fa-pencil-alt"></span></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn alert-info" title="Details"><span class="fa fa-info-circle"></span></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash-alt"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
