@model IEnumerable<Bridge.ERP.Models.List>

@{
    ViewData["Title"] = "Index";
}
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
  <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
</svg>
<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="mr-auto p-2">
                <a asp-action="Create" class="btn btn-info float-right">Add List</a>
                <h4>Marketing Lists</h4>
            </div>

            <table class="table table-hover">
                <thead class="thread-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ListName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ListType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsDelete)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ListName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ListType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDelete)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <i class="bi bi-three-dots-vertical">opcao</i>
                                @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn alert-warning"><span class="fa fa-pencil-alt"></span></a> |*@
                                @*<a asp-action="Details" asp-route-id="@item.Id" class="btn alert-info" title="Details"><span class="fa fa-info-circle"></span></a> |*@
                                @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash-alt"></span></a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>