    ViewData["Title"] = "Delete";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <h4>Are you sure you want to delete this?</h4>
            <div>
                <h4>Lists</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TenantId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenantId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ListName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ListName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ListType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ListType)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsDelete)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsDelete)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ListDescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ListDescription)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
